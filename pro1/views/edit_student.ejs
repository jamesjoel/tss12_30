<%- include('header') %>
    <!-- Page Content -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Student Page</h1>
            <span>feel free to send us a message now!</span>
          </div>
        </div>
      </div>
    </div>

    <div class="container my-5" style="min-height: 600px;">
        <form action="/student/update_student/<%= result._id %>" method="post">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h4 class="text-center mb-4">Student Update</h4>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" value="<%= result.fullname %>" name="fullname" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="text" value="<%= result.age %>" name="age" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Class</label>
                    <input name="class" value="<%= result.class %>" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Fee</label>
                    <input name="fee" value="<%= result.fee %>" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <textarea name="address" class="form-control" ><%= result.address %></textarea>
                </div>
                <Br />
                <Br />
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </form>
    </div>

    

    

   


 <%- include('footer') %>