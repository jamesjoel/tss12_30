<%- include('header') %>
    <!-- Page Content -->
    <div class="page-heading header-text">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1>Student Page</h1>
            <span>feel free to send us a message now!</span>
          </div>
        </div>
      </div>
    </div>

    <div class="container my-5" style="min-height: 600px;">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h4 class="text-center">List All Student</h4>
                <table class="table table-dark table-hover table-bordered table-striped mt-4">
                    <tr>
                        <th>S.No.</th>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Class</th>
                        <th>Fee</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    <% result.forEach((x, n)=>{ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.fullname %></td>
                            <td><%= x.age %></td>
                            <td><%= x.class %></td>
                            <td><%= x.fee %></td>
                            <td><a href="/student/edit/<%= x._id %>" class="btn btn-info btn-sm">Edit</a></td>
                            <td><a href='/student/delete/<%= x._id %>'class='btn btn-danger btn-sm'>Delete</a></td>
                       
                        </tr>
                    <% }) %>



                </table>
            </div>
        </div>
    </div>

    

    

   


 <%- include('footer') %>