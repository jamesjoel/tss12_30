<%- include('header') %>
          <div class="container mt-4" style="min-height: 600px;">
            <div class="row">
                <div class="col-md-12">
                    <h2>Employee Update</h2>
                    <form action="/employee/update/<%= result._id %>" method="post">
                    <div class="row">
                      <div class="col-md-6 offset-md-3">
                        <div class="form-group">
                          <label>Full Name</label>
                          <input type="text" value="<%= result.fullname %>" name="fullname" class="form-control" />
                        </div>
                        <div class="form-group">
                          <label>City</label>
                          <select class="form-control" name="city">
                            <option>Select</option>
                            <option <% if(result.city == "Indore"){ %> selected  <% } %>>Indore</option>
                            <option <% if(result.city == "Mumbai"){ %> selected  <% } %>>Mumbai</option>
                            <option <% if(result.city == "Pune"){ %> selected  <% } %>>Pune</option>
                            <option <% if(result.city == "Bhopal"){ %> selected  <% } %>>Bhopal</option>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Gender</label>
                           Male <input type="radio" <% if(result.gender=="male"){ %> checked <% } %> name="gender" value="male"/>
                           Female <input type="radio" <% if(result.gender=="female"){ %> checked <% } %> name="gender" value="female"/>
                        </div>
                        <div class="form-group">
                          <label>Salary</label>
                          <input value="<%= result.salary %>" type="text" class="form-control" name="salary"/>
                        </div>
                        <div class="form-group">
                          <label>Adderss</label>
                          <textarea class="form-control" name="address"><%= result.address %></textarea>
                        </div>
                        <br />
                        <input type="submit" value="Add" class="btn btn-primary" />
                      </div>
                    </div>
                  </form>
                </div>
            </div>
          </div>
<%- include('footer') %>
